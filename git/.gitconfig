    email = olderfe66@gmail.com

[core]
    editor = nvim

[alias]
    co = checkout
    br = branch
    ci = commit
    st = status
    up = pull -r

[color]
    ui = auto

[pull]
    rebase = true

[merge]
  tool = diffview
[mergetool]
  prompt = false
  keepBackup = false

[mergetool "diffview"]
  cmd = nvim -n -c "DiffviewOpen" "$MERGE"

[difftool]
    prompt = false

[diff]
    tool = nvimdiff

[difftool "nvimdiff"]
    cmd = nvim -d -c 'DiffviewOpen HEAD %1 %2'



