# i3status configuration file.
# see "man i3status" for documentation.

general {
        colors = true
        interval = 2
}

order += "ipv6"
order += "cpu_temperature 1"
order += "memory"
order += "disk /"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "load"
order += "volume master"
order += "tztime local"

cpu_temperature 1 {
        format = "T: %degrees Â°C"
}

wireless _first_ {
        # format_up = "W: (%quality at %essid) %ip"
        format_up = "W: (%quality) Leaked IP: %ip"
        format_down = "W: down"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery all {
        format = "Fairy Dust: %percentage %status %remaining"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

load {
        format = "Load: %1min"
}

disk "/" {
        format = "D: %avail"
}

ipv6 {
        format_up = "v6: %ip"
        format_down = "v6: Down"
}

volume master {
    format = "Volume: %volume"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

memory {
    format = "M: %used/%total MB (%percentage_used)"
}

