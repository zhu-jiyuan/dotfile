{
	"layer": "top",
	"position": "top",
	"modules-left": [
		"custom/stream_status",
		"hyprland/workspaces"
	],
	"modules-center": [
		"clock"
	],
	"modules-right": [
		"pulseaudio",
		"battery",
		"network",
		"cpu",
		"temperature",
		"memory",
		"tray",
		"custom/lock"
	],
	"hyprland/workspaces": {
		"format": "{name}: {icon}",
		"format-icons": {
			"active": "",
			"default": ""
		}
	},
	"tray": {
		"icon-size": 17,
		"spacing": 10
	},
	"clock": {
		"tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
		"format": "{:%m/%d - %H:%M}"
	},
	"network": {
		"format-wifi": "󰤢 ",
		"format-ethernet": "󰈀 ",
		"format-disconnected": "󰤠 ",
		"interval": 5,
		"tooltip": false
	},
	"cpu": {
		"interval": 5,
		"format": "  {icon0}{icon1}{icon2}{icon3} {usage:>2}%",
		"format-icons": [
			"▁",
			"▂",
			"▃",
			"▄",
			"▅",
			"▆",
			"▇",
			"█"
		]
	},
	"temperature": {
		// "critical-threshold": 80,
		"interval": 5,
		"format": "{icon} {temperatureC}°C",
		"format-icons": [
			"",
			"",
			"",
			"",
			""
		],
		"tooltip": true
	},
	"memory": {
		"interval": 30,
		"format": "  {used:0.1f}G/{total:0.1f}G"
	},
	"pulseaudio": {
		"format": "{icon} {volume}%",
		"format-muted": "",
		"format-icons": {
			"default": [
				"",
				"",
				" "
			]
		},
		"on-click": "pavucontrol"
	},
	"custom/lock": {
		"tooltip": false,
		"on-click": "~/.config/rofi/bin/rofi-powermenu",
		"format": "☭"
	},
	"later": {
		"format": "<span class='icon'>{icon}</span> <span class='text'>{text}</span>"
	}
}
