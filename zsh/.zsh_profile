############### PATH #################
addToPathFront /usr/local/go/bin
addToPathFront $HOME/.local/bin
addToPathFront $HOME/.local/kitty.app/bin
addToPathFront $HOME/.cargo/bin

############### ENV ##################
OS=$(uname -s)

# batcat
# 判断是否是Arch Linux
if [ "$OS" = "Linux" ] && [ ! -f /etc/arch-release ]; then
    alias bat="batcat"
else
    alias bat="bat"
fi
# export LANG=en_US.UTF-8
# fzf
# use github install fzf, and add fzf to zsh.
source <(fzf --zsh)
export FZF_DEFAULT_COMMAND='fd --type file --follow --hidden --exclude .git'
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"
############### alias #################
# base
alias ll='ls -lh --color'
alias ls='ls --color'
alias vim='nvim'
if [ -n "$TMUX" ]; then
    alias clear='tmux clear-history;clear'
fi
alias cls='clear'

# git
alias glog='git log --oneline --decorate --graph'
alias gco='git checkout'
alias g='git'
alias ga='git add'
alias gst='git status'
alias gcm='git checkout master'
alias gp='git push'
alias gcmsg='git commit -m'
alias gl='git pull'

# z
alias zi='z -t -I .'

# alias bat='batcat'

# fd
alias fd='fdfind'
if [ ! -L ~/.local/bin/fd ] && command -v fdfind &>/dev/null; then
    ln -s "$(command -v fdfind)" ~/.local/bin/fd
fi

# wsl
alias open_ex='explorer.exe'

# fzf
alias fzfp='fzf --preview "batcat --color=always {}"'

#kitty terminal
if command -v kitty > /dev/null 2>&1; then
    export TERMINAL=kitty
fi

############### tools function #################

# tool function
proxy_host_ip=127.0.0.1
proxy_port=6666
proxy_user=username
proxy_passwd=passwd
on_proxy () {
  export http_proxy="http://$proxy_user:$proxy_passwd@$proxy_host_ip:$proxy_port"
  export https_proxy="https://$proxy_user:$proxy_passwd@$proxy_host_ip:$proxy_port"
  echo "HTTP Proxy on"
}

# where noproxy
off_proxy () {
  unset http_proxy
  unset https_proxy
  echo "HTTP Proxy off"
}

# yazi warp to cwd
function yy() {
	local tmp="$(mktemp -t "yazi-cwd.XXXXXX")"
	yazi "$@" --cwd-file="$tmp"
	if cwd="$(cat -- "$tmp")" && [ -n "$cwd" ] && [ "$cwd" != "$PWD" ]; then
		cd -- "$cwd"
	fi
	rm -f -- "$tmp"
}

